
func save() {
        let jsonEncoer = JSONEncoder()

        if let savedData = try? jsonEncoer.encode(people) {
            let defaults = UserDefaults.standard
            defaults.set(savedData, forKey: "people")
        }else{
            print("Failed to save people.")
        }
    }



